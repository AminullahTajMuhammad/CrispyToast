<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button android:id="@+id/btnDefault"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Default Toast"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button android:id="@+id/btnSuccess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Success Toast"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDefault"/>

    <Button android:id="@+id/btnError"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Error Toast"
        android:layout_margin ="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSuccess"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button android:id="@+id/btnConfuse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Confusion Toast"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button android:id="@+id/btnWarning"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Warning Toast"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnConfuse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnConnectLost"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Connect Lost Toast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWarning"/>

</androidx.constraintlayout.widget.ConstraintLayout>